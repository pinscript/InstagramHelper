{
	"manifest_version": 2,

	"name": "Helper Tools for Instagram",
	"short_name": "Helper For Insta",
	"description": "Create a list of instagram users, export it into CSV file; find common users of 2 users, also other helpfers for instagram.com",
	"version": "0.302",

	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",

	"page_action": {
		"default_icon": "img/icon19.png",
		"default_title": "Helper Tools for Instagram.com - 0.302a",
		"default_popup": "popup.html"
	},

	"icons": {
		"19": "img/icon19.png",
		"32": "img/icon32.png",
		"48": "img/icon48.png",
		"64": "img/icon64.png"
	},

	"background": {
		"scripts": ["js/PromiseChrome.js", "js/background.js"],
		"persistent": true
	},

	"content_scripts": [{
			"matches": ["https://www.instagram.com/*"],
			"js": ["js/instaDefOptions.js", "js/PromiseChrome.js", "js/messages.js", "js/instagramHelper.js"]
		}
	],

	"permissions": [
		"tabs",
		"storage",
		"cookies",
		"webRequest",
		"webRequestBlocking",
		"https://www.instagram.com/*"
	],
	
	"incognito": "split"
}
